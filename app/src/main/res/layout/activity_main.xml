<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#3b24a1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#3b24a1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="CHOOSE THE SNACK"
            style="@style/snacksoption"
            android:background="#272276"
            android:layout_weight="1"
            android:textSize="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="IndianSnacks">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/indiansnacks"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="match_parent"
                style="@style/snacksoption"
                android:text="Indian Snacks"
                android:layout_marginTop="0dp"
                android:background="#272276"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="ChineseSnacks">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/capture"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                style="@style/snacksoption"
                android:text="Chinese Snacks"
                android:background="#272276"
                android:layout_marginTop="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="ItalianSnacks">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/italiansnacks"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="match_parent"
                style="@style/snacksoption"
                android:text="Italian Snacks"
                android:background="#272276"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="Beverages_tea_coffee">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/beverage"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="match_parent"
                style="@style/snacksoption"
                android:text="Beverages"
                android:background="#272276"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>