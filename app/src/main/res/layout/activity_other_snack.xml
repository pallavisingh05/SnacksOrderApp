<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".OtherSnack"
    android:background="#6398f5">
        <EditText
            android:id="@+id/Name_of_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:hint="Your Name?"
            android:inputType="text"
            android:maxLength="50"
            android:textSize="22dp"
            android:textColor="#272276"/>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

                <Button
                    android:id="@+id/OrderButtonIndSnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#272276"
                    android:text="order"
                    android:textAllCaps="true"
                    android:textColor="#FCFDED" />

                <Button
                    android:id="@+id/ResetButtonIndSnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/OrderButtonIndSnack"
                    android:background="#272276"
                    android:text="reset"
                    android:textAllCaps="true"
                    android:textColor="#FCFDED" />

        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/indiansnack_rootview"/>


</LinearLayout>